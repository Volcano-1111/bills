import java.util.Scanner;

public class MoneyCalculator {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter the monthly payment: ");
        double monthlyPayment = input.nextDouble();

        System.out.print("Enter the number of months: ");
        int numMonths = input.nextInt();

        double totalAmount = monthlyPayment * numMonths;

        System.out.println("The total amount spent is: $" + totalAmount);

        input.close();
    }
}
